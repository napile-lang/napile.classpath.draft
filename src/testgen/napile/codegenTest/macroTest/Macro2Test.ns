package codegenTest.macroTest

import napile.logging.Logger

/**
 * @author VISTALL
 */
class Macro2Test
{
	var a : Int = 0

	this()

	meth test()
	{
		a0()

		a0()

		a0()

		Logger.System.info("'test' called")
	}

	local macro a0()
	{
		if(a == 2)
			return

		a++

		Logger.System.info("a == " + a)
	}

	static meth main(val arg : Array<String>)
	{
		Macro2Test().test()
	}
}