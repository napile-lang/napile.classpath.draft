package napile.lang

import napile.io.Console

/**
 * @author VISTALL
 */
class Throwable
{
	final var message : String?

	var stack : Array<StackTraceElement>

	this() : this(null)

	this(message)

	native local meth stack.lazy() : Array<StackTraceElement>

	meth printStackTrace()
	{
		Console.writeLine(getClass().name)
		if(message != null)
		{
			Console.writeLine(" : ")
			Console.writeLine(message)
		}
		for(b in stack)
			Console.writeLine("\tat " + b.name)
	}
}