package napile.lang

import napile.io.Console

/**
 * @author VISTALL
 */
class String
{
	local /*final*/ var array : Array<Char>
	local /*final*/ var count : Int
	local /*final*/ var offset : Int

	this(oldArray : Array<Char>)
	{
		count = oldArray.length
		offset = 0
		array = oldArray.clone()
	}

	this(oldArray : Array<Char>, offset, count)
	{
		array = ArrayUtil.copyOfRange(oldArray, offset, offset + count);
	}

	meth toArray() : Array<Char> = ArrayUtil.copyOfRange(array, offset, offset + count)

	meth plus(a : Any) : String
	{
		var c = StringBuilder();
		c += toString()
		c += a
		return c.toString()
	}

	override meth equals(final o : Any?) : Bool
	{
		if (fullyEquals(o))
			return true

		if (o is String)
		{
			var n = count;
			if (n == o.count)
			{
				var v1 = array
				var v2 = o.array
				var i = offset
				var j = o.offset
				while (n-- != 0)
				{
					if (v1[i++] != v2[j++])
						return false
				}

				return true
			}
		}
		return false
	}

	override meth toString() : String = String(array, offset, count)
}