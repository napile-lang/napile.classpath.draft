package napile.lang

/**
 * @author VISTALL
 */
class Thread
{
	local final val target : {}

	final var state : ThreadState
	{
		local set
	} = ThreadState.NEW

	this(target = {})

	local meth run()
	{
		target()

		state = ThreadState.FINISHED
	}

	meth start()
	{
		if(state != ThreadState.NEW)
			throw IllegalStateException()

		state = ThreadState.STARTED

		start0()
	}

	local native final meth start0();
}